{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "lint-watch",
			"type": "npm",
			"script": "lint-watch",
			"isBackground": true,
			"problemMatcher": {
				"owner": "eslint",
				"fileLocation": "absolute",
				"pattern": {
					"regexp": "^(.+):\\sline\\s(\\d+),\\scol\\s(\\d+),\\s(Error|Warning|Info)\\s-\\s(.+)\\s\\((.+)\\)$",
					"file": 1,
					"kind": "location",
					"line": 2,
					"column": 3,
					"severity": 4,
					"message": 5,
					"code": 6
				},
				"background": {
					"activeOnStart": false,
					"beginsPattern": "^linting\\.\\.\\.$",
					"endsPattern": "^done\\!"
				}
			},
			"runOptions": {
				// "runOn": "folderOpen"
			},
			"presentation": {
				"group": "groupA",
				"showReuseMessage": false,
				"panel": "dedicated",
				"reveal": "never",
			},
		},
		{
			"label": "watch-ts-client",
			"type": "npm",
			"script": "watch-ts-client",
			"presentation": {
				"group": "groupA",
				"showReuseMessage": false,
				"panel": "dedicated",
				"reveal": "never",
			},
			"isBackground": true,
			"problemMatcher": "$tsc-watch",
			"runOptions": {
				// "runOn": "folderOpen"
			}
		},
		{
			"label": "watch-ts-server",
			"type": "npm",
			"script": "watch-ts-server",
			"presentation": {
				"group": "groupA",
				"showReuseMessage": false,
				"panel": "dedicated",
				"reveal": "never",
			},
			"isBackground": true,
			"problemMatcher": "$tsc-watch",
			"runOptions": {
				// "runOn": "folderOpen"
			}
		},
		{
			"label": "go",
			"type": "process",
			"command": "",
			"dependsOn": [
				"watch-parcel",
				"watch-server"
			],
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "watch-parcel",
			"type": "npm",
			"script": "watch-parcel",
			"presentation": {
				"group": "groupB",
				"showReuseMessage": false,
				"panel": "dedicated"
			},
			"isBackground": true,
			"problemMatcher": [],
			"runOptions": {
				"runOn": "folderOpen"
			}
		},
		{
			"label": "watch-server",
			"type": "npm",
			"script": "watch-server",
			"presentation": {
				"group": "groupB",
				"showReuseMessage": false,
				"panel": "dedicated"
			},
			"isBackground": true,
			"problemMatcher": [],
			"runOptions": {
				"runOn": "folderOpen"
			}
		},
	]
}
