{
    "eslint.autoFixOnSave": true,
    "tslint.autoFixOnSave": [
        "array-type",
        "arrow-parens",
        "indent",
        "no-consecutive-blank-lines",
        "object-literal-key-quotes",
        "ordered-imports",
        "quotemark",
        "semicolon",
        "space-before-function-paren",
        "trailing-comma"
    ],
    "files.eol": "\n",
    "javascript.preferences.quoteStyle": "single",
    "typescript.preferences.quoteStyle": "single",
    "editor.insertSpaces": false,
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "built/**/*": true
    },
    "editor.codeActionsOnSave": {
        "source.organizeImports": false
    },
    "tslint.jsEnable": true,
    "tslint.packageManager": "yarn",
    "tslint.run": "onType",
    "typescript.tsdk": "node_modules\\typescript\\lib",
    "cSpell.words": [
        "DEVTOOLS",
        "Scrollable",
        "Unmount",
        "adsr",
        "automerge",
        "callout",
        "hashbow",
        "keyframes",
        "localstorage",
        "lowpass",
        "onmidimessage",
        "onstatechange",
        "slidedown",
        "slidein",
        "slideout",
        "slideup",
        "soundbank",
        "sysex",
        "unpress",
        "unselectable"
    ],
    "editor.dragAndDrop": false,
    "cSpell.ignorePaths": [
        "**/package-lock.json",
        "**/node_modules/**",
        "**/vscode-extension/**",
        "**/.git/**",
        ".vscode",
        "typings",
        "built/**/*",
        ".cache"
    ],
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "node_modules": true
    },
    "tslint.exclude": "node_modules",
    "cSpell.ignoreRegExpList": [
        "node_modules"
    ]
}
