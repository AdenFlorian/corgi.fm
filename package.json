{
  "name": "root",
  "version": "0.4.40",
  "license": "UNLICENSED",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap --use-workspaces",
    "start": "concurrently --names \"parcel,server\" \"yarn watch-parcel\" \"yarn watch-server\"",
    "watch-parcel": "parcel packages/client/index.html",
    "watch-server": "ts-node-dev --respawn --notify false --project packages/server/tsconfig.json packages/server/server.ts",
    "watch-ts-client": "tsc --project packages/client/tsconfig.json --noEmit --watch",
    "watch-server-old": "ts-node-dev --respawn --transpileOnly --notify false --inspect --project packages/server/tsconfig.json packages/server/server.ts",
    "start-local": "pm2 start ecosystem.config.js --env local",
    "start-test": "pm2 start ecosystem.config.js --env test",
    "start-prod": "pm2 start ecosystem.config.js --env prod",
    "lint": "eslint_d . --ext .js,.ts,.jsx,.tsx --ignore-path .gitignore --color --cache",
    "lint-watch": "watch \"echo linting... && (eslint_d . --ext .js,.ts,.jsx,.tsx --ignore-path .gitignore --cache --format compact || true) && echo done!\" packages",
    "test": "yarn test-client && yarn test-common && yarn test-server",
    "test-client": "jest -i --config packages/client/jest.config.js",
    "test-common": "jest -i --config packages/common/jest.config.js",
    "test-server": "jest -i --config packages/server/jest.config.js",
    "test-api": "yarn test-server --testPathPattern api",
    "clean": "rm -rf .cache built dist *.log .eslintcache && jest --clearCache",
    "deploy-test": "yarn version --patch && yarn build && bash scripts/deploy-test.sh",
    "deploy-prod": "yarn version --patch && yarn build && bash scripts/deploy-prod.sh",
    "build": "rm -rf built && yarn build-server && yarn build-common && yarn build-client && yarn build-other",
    "build-client": "parcel build packages/client/index.html --out-dir built/packages/public --no-source-maps",
    "build-server": "tsc --project packages/server/tsconfig.json --outDir built/packages/server --noEmit false && cp packages/server/package.json built/packages/server",
    "build-common": "tsc --project packages/common/tsconfig.json --outDir built/packages/common --noEmit false && cp packages/common/package.json built/packages/common",
    "build-other": "cp package.json yarn.lock lerna.json packages/server/ecosystem.config.js built && cp packages/public/* built/packages/public",
    "setup-test-server": "bash scripts/setup-test-server.sh",
    "setup-prod-server": "bash scripts/setup-prod-server.sh"
  },
  "dependencies": {},
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^1.12.0",
    "@typescript-eslint/parser": "^1.12.0",
    "chai": "^4.1.2",
    "concurrently": "^3.5.1",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jest": "^22.8.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.14.2",
    "eslint-plugin-react-hooks": "^1.6.1",
    "eslint-plugin-unicorn": "^9.1.1",
    "eslint-watch": "^6.0.0",
    "eslint_d": "^8.0.0",
    "jest": "^24.8.0",
    "lerna": "^3.15.0",
    "pm2": "^2.10.4",
    "sinon": "^7.2.2",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^6.1.0",
    "ts-node-dev": "^1.0.0-pre.26",
    "typescript": "^3.5.3",
    "watch": "^1.0.2"
  }
}
