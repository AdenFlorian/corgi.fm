{
  "name": "sha-mu",
  "version": "0.0.1",
  "main": "server.js",
  "license": "UNLICENSED",
  "scripts": {
    "start": "yarn clean && gulp build-dev && concurrently --names \"parcel,build,server\" \"yarn watch-parcel\" \"yarn watch\" \"yarn watch-server\"",
    "watch": "watch \"gulp build-dev\" src/server",
    "watch-parcel": "parcel src/client/index.html --out-dir built/dev/client --open",
    "watch-server": "nodemon --watch built/dev/server built/dev/server/server.js",
    "start-prod": "pm2 start server/server.js",
    "lint": "eslint . && tslint src/client/**/*.ts* --project src/client/tsconfig.json && tslint src/server/**/*.ts* --project src/server/tsconfig.json ",
    "test": "mocha --opts src/mocha.opts",
    "test-debug": "mocha --inspect --opts src/mocha.opts",
    "tdd": "mocha --watch src/**/*.ts* --reporter dot --opts src/mocha.opts",
    "clean": "gulp clean",
    "deploy-test": "yarn clean && gulp build-test && yarn build-client-test && bash scripts/deploy-test.sh",
    "deploy-prod": "yarn clean && gulp build-prod && yarn build-client-prod && bash scripts/deploy-prod.sh",
    "build-client-test": "parcel build src/client/index.html --out-dir built/test/client",
    "build-client-prod": "parcel build src/client/index.html --out-dir built/prod/client",
    "setup-test-server": "bash scripts/setup-test-server.sh",
    "setup-prod-server": "bash scripts/setup-prod-server.sh"
  },
  "dependencies": {
    "adsr": "^1.0.1",
    "animal-id": "^0.0.1",
    "classnames": "^2.2.6",
    "color-hash": "^1.0.3",
    "cross-env": "^5.1.6",
    "express": "^4.16.3",
    "parcel": "1.8.0",
    "prop-types": "^15.6.1",
    "query-string": "^6.1.0",
    "rc-slider": "^8.6.1",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "react-hot-loader": "^4.3.0",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0",
    "redux-localstorage": "^0.4.1",
    "socket.io": "^2.1.1",
    "soundbank-reverb": "^1.1.2"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/gulp": "^4.0.5",
    "@types/react": "^16.3.16",
    "@types/react-dom": "^16.0.6",
    "@types/react-redux": "^6.0.2",
    "@types/redux": "^3.6.0",
    "@types/socket.io": "^1.4.34",
    "@types/socket.io-client": "^1.4.32",
    "chai": "^4.1.2",
    "concurrently": "^3.5.1",
    "del": "^3.0.0",
    "eslint": "^4.19.1",
    "gulp": "^4.0.0",
    "gulp-sourcemaps": "^2.6.4",
    "gulp-typescript": "^4.0.2",
    "less": "^3.0.4",
    "mocha": "^5.2.0",
    "nodemon": "^1.17.5",
    "parcel-bundler": "^1.8.1",
    "pm2": "^2.10.4",
    "ts-node": "^6.1.0",
    "tslint": "^5.10.0",
    "typescript": "^2.9.1",
    "watch": "^1.0.2"
  }
}
