{
  "name": "sha-mu",
  "version": "0.1.0",
  "main": "server.js",
  "license": "UNLICENSED",
  "scripts": {
    "start": "yarn clean && concurrently --names \"parcel,server\" \"yarn watch-parcel\" \"yarn watch-server\"",
    "watch-parcel": "parcel src/client/index.html",
    "watch-server": "ts-node-dev --project src/server/tsconfig.json src/server/server.ts",
    "start-prod": "pm2 start server/server.js",
    "lint": "eslint . && tslint src/client/**/*.ts* --project src/client/tsconfig.json && tslint src/server/**/*.ts* --project src/server/tsconfig.json ",
    "test": "yarn test-client",
    "test-client": "cross-env TS_NODE_PROJECT=\"src/client/tsconfig.json\" mocha --opts src/client/mocha.opts",
    "test-debug": "mocha --inspect --opts src/mocha.opts",
    "tdd": "mocha --watch src/**/*.ts* --reporter dot --opts src/mocha.opts",
    "clean": "rm -rf .cache built dist",
    "deploy-test": "yarn build && bash scripts/deploy-test.sh",
    "deploy-prod": "yarn build && bash scripts/deploy-prod.sh",
    "build": "rm -rf built && yarn build-server && yarn build-client && yarn build-other",
    "build-client": "parcel build src/client/index.html --out-dir built/public --no-source-maps",
    "build-server": "tsc --project src/server/tsconfig.json --outDir built",
    "build-other": "cp package.json yarn.lock built",
    "setup-test-server": "bash scripts/setup-test-server.sh",
    "setup-prod-server": "bash scripts/setup-prod-server.sh"
  },
  "dependencies": {
    "adsr": "^1.0.1",
    "animal-id": "^0.0.1",
    "color": "^3.0.0",
    "color-hash": "^1.0.3",
    "express": "^4.16.3",
    "parcel": "1.8.0",
    "prop-types": "^15.6.1",
    "query-string": "^6.1.0",
    "rc-slider": "^8.6.1",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "react-hot-loader": "^4.3.0",
    "react-redux": "^5.0.7",
    "react-svg": "^4.0.17",
    "redux": "^4.0.0",
    "redux-devtools-extension": "^2.13.7",
    "redux-localstorage": "^0.4.1",
    "reselect": "^3.0.1",
    "socket.io": "^2.1.1",
    "soundbank-reverb": "^1.1.2"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/react": "^16.3.16",
    "@types/react-dom": "^16.0.6",
    "@types/react-redux": "^6.0.2",
    "@types/redux": "^3.6.0",
    "@types/socket.io": "^1.4.34",
    "@types/socket.io-client": "^1.4.32",
    "chai": "^4.1.2",
    "concurrently": "^3.5.1",
    "cross-env": "^5.1.6",
    "del": "^3.0.0",
    "eslint": "^4.19.1",
    "less": "^3.0.4",
    "mocha": "^5.2.0",
    "parcel-bundler": "^1.8.1",
    "pm2": "^2.10.4",
    "ts-node": "^6.1.0",
    "ts-node-dev": "^1.0.0-pre.26",
    "tslint": "^5.10.0",
    "typescript": "^2.9.1"
  }
}
