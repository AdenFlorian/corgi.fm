{
	"compilerOptions": {
		"noEmit": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"sourceMap": false,
		"strict": true,
		"noImplicitReturns": true,
		"target": "esnext",
		"module": "commonjs",
		"lib": [
			"dom",
			"es7"
		],
		"plugins": [
			{
				"name": "typescript-tslint-plugin",
				"alwaysShowRuleFailuresAsWarnings": false,
			}
		]
	},
	"include": [
		"*",
		"../types/*"
	]
}
