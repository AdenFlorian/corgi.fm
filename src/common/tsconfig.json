{
	"compilerOptions": {
		"noEmit": true,
		"allowSyntheticDefaultImports": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"sourceMap": false,
		"strict": true,
		"noImplicitReturns": true,
		"target": "esnext",
		"module": "commonjs",
		"lib": [
			"dom",
			"es7"
		]
	},
	"include": [
		"./**/*.ts*",
		"./**/*.js*",
		"../types/**/*.ts"
	]
}
