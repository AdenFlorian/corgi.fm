{
	"compilerOptions": {
		"noEmit": true,
		"allowSyntheticDefaultImports": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"sourceMap": true,
		"strict": true,
		"noImplicitReturns": true,
		"target": "es6",
		"module": "commonjs",
		"lib": [
			"dom",
			"es7"
		],
		"experimentalDecorators": true,
		"jsx": "react",
		"plugins": [
			{
				"name": "typescript-tslint-plugin"
			}
		]
	},
	"include": [
		"*",
		"../types/*"
	]
}
